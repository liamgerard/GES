<UserControl x:Class="GES.FormatForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="280" Height="550">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <Grid Background="#f8f8f8">
            <ListBox Grid.Column="0" Name="FunctionList" SelectionChanged="FunctionList_SelectionChanged" BorderThickness="1" BorderBrush="LightGray">
                <!--<ListBoxItem Content="Cycle General Number Formats" Style="{StaticResource FunctionItem}"/>
                <ListBoxItem Content="Cycle General Number Formats" Style="{StaticResource FunctionItem}"/>-->
            </ListBox>
        </Grid>
    </ScrollViewer>
</UserControl>
